<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Encabezado -->
    <TextView
        android:id="@+id/textBienvenida"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="¡Hola Repartidor!"
        android:textSize="24sp"
        android:textColor="#F06292"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <!-- Subtítulo -->
    <TextView
        android:id="@+id/textPedidos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Pedidos asignados"
        android:textSize="18sp"
        android:textColor="#333333"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/textBienvenida"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Lista de pedidos (simulada por ahora) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerPedidos"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/textPedidos"
        app:layout_constraintBottom_toTopOf="@id/buttonCerrarPedido"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón para cerrar pedido -->
    <Button
        android:id="@+id/buttonCerrarPedido"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Marcar como entregado"
        android:textColor="#FFFFFF"
        android:backgroundTint="#F06292"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp" />



</androidx.constraintlayout.widget.ConstraintLayout>
